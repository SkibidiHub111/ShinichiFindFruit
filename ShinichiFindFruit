-- Nh·∫≠p Roblox Asset ID c·ªßa b·∫°n t·∫°i ƒë√¢y
local AssetID = "74026087738956" -- Thay ƒë·ªïi ID n√†y th√†nh ID b·∫°n mu·ªën

-- Load th∆∞ vi·ªán UI (Rayfield)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- T·∫°o giao di·ªán ch√≠nh
local Window = Rayfield:CreateWindow({
    Name = "Shinichi Hub - Blox Fruits",
    LoadingTitle = "ƒêang T·∫£i Shinichi Hub...",
    LoadingSubtitle = "By Shinichi",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "ShinichiHubData",
        FileName = "BloxFruitsConfig"
    },
    KeySystem = false
})

-- ƒê·ªïi Avatar b·∫±ng Asset ID (T·ª± ƒë·ªông khi ch·∫°y script)
if tonumber(AssetID) then
    game.Players.LocalPlayer.CharacterAppearanceId = AssetID
    game.Players.LocalPlayer:LoadCharacter()
end

-- Bi·∫øn ƒëi·ªÅu khi·ªÉn t√≠nh nƒÉng
local ESPEnabled = true
local AutoMoveEnabled = true
local ServerHopEnabled = true

-- === T√≠nh NƒÉng T√¨m Tr√°i √Åc Qu·ª∑ (ESP) ===
local FruitTab = Window:CreateTab("üçé Tr√°i √Åc Qu·ª∑", nil)
FruitTab:CreateLabel("T√¨m v√† t·ª± ƒë·ªông di chuy·ªÉn ƒë·∫øn Tr√°i √Åc Qu·ª∑!")

-- H√†m t·∫°o ESP cho Tr√°i √Åc Qu·ª∑
local function CreateFruitESP(fruit)
    if fruit:IsA("Tool") and fruit:FindFirstChild("Handle") then
        local billboard = Instance.new("BillboardGui")
        billboard.Size = UDim2.new(0, 100, 0, 40)
        billboard.Adornee = fruit.Handle
        billboard.AlwaysOnTop = true

        local label = Instance.new("TextLabel")
        label.Parent = billboard
        label.Size = UDim2.new(1, 0, 1, 0)
        label.BackgroundTransparency = 1
        label.TextColor3 = Color3.fromRGB(255, 0, 0)
        label.TextStrokeTransparency = 0.5
        label.Text = "üçé " .. fruit.Name
        label.TextScaled = true

        billboard.Parent = fruit
    end
end

-- T√¨m Tr√°i √Åc Qu·ª∑ tr√™n map
local function ScanForFruits()
    for _, fruit in pairs(game.Workspace:GetDescendants()) do
        if fruit:IsA("Tool") and string.find(fruit.Name, "Fruit") then
            CreateFruitESP(fruit)
            if AutoMoveEnabled then
                game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = fruit.Handle.CFrame + Vector3.new(0, 3, 0)
            end
        end
    end
end

-- Toggle ESP Fruit
FruitTab:CreateToggle({
    Name = "B·∫≠t/T·∫Øt ESP Tr√°i √Åc Qu·ª∑",
    CurrentValue = false,
    Flag = "ESPEnabled",
    Callback = function(Value)
        ESPEnabled = Value
        if ESPEnabled then
            ScanForFruits()
        else
            for _, fruit in pairs(game.Workspace:GetDescendants()) do
                if fruit:FindFirstChildOfClass("BillboardGui") then
                    fruit:FindFirstChildOfClass("BillboardGui"):Destroy()
                end
            end
        end
    end,
})

-- Auto Move ƒê·∫øn Tr√°i
FruitTab:CreateToggle({
    Name = "T·ª± ƒê·ªông Di Chuy·ªÉn ƒê·∫øn Tr√°i",
    CurrentValue = false,
    Flag = "AutoMoveEnabled",
    Callback = function(Value)
        AutoMoveEnabled = Value
        if AutoMoveEnabled then
            ScanForFruits()
        end
    end,
})

-- Hop Server
FruitTab:CreateToggle({
    Name = "B·∫≠t/T·∫Øt Hop Server",
    CurrentValue = false,
    Flag = "ServerHopEnabled",
    Callback = function(Value)
        ServerHopEnabled = Value
        if ServerHopEnabled then
            while ServerHopEnabled do
                task.wait(10)
                if #game.Workspace:GetChildren() == 0 then
                    local TeleportService = game:GetService("TeleportService")
                    local PlaceID = game.PlaceId
                    TeleportService:Teleport(PlaceID)
                end
            end
        end
    end,
})

Rayfield:LoadConfiguration()
